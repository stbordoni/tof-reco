if(NOT WIN32)
  string(ASCII 27 Esc)
  set(CM_ColourReset "${Esc}[m")
  set(CM_ColourBold "${Esc}[1m")
  set(CM_Red "${Esc}[31m")
  set(CM_Green "${Esc}[32m")
  set(CM_Yellow "${Esc}[33m")
  set(CM_Blue "${Esc}[34m")
  set(CM_Magenta "${Esc}[35m")
  set(CM_Cyan "${Esc}[36m")
  set(CM_White "${Esc}[37m")
  set(CM_BoldRed "${Esc}[1;31m")
  set(CM_BoldGreen "${Esc}[1;32m")
  set(CM_BoldYellow "${Esc}[1;33m")
  set(CM_BoldBlue "${Esc}[1;34m")
  set(CM_BoldMagenta "${Esc}[1;35m")
  set(CM_BoldCyan "${Esc}[1;36m")
  set(CM_BoldWhite "${Esc}[1;37m")
endif()

function(cmessage)
  if(ARGC LESS 1)
    message("") # black space
  else()
    list(GET ARGV 0 MessageType)
    if(MessageType STREQUAL FATAL_ERROR OR MessageType STREQUAL SEND_ERROR)
      list(REMOVE_AT ARGV 0)
      message( ${MessageType} "${CM_BoldRed}[ERRO]:${CM_ColourReset} ${ARGV}" )
    elseif(MessageType STREQUAL ERROR)
      list(REMOVE_AT ARGV 0)
      message("STATUS" "${CM_BoldRed}[ERRO]:${CM_ColourReset} ${ARGV}")
    elseif(MessageType STREQUAL ALERT)
      list(REMOVE_AT ARGV 0)
      message("STATUS" "${CM_BoldMagenta}[ALRT]:${CM_ColourReset} ${ARGV}")
    elseif(MessageType STREQUAL WARNING)
      list(REMOVE_AT ARGV 0)
      message("STATUS" "${CM_BoldYellow}[WARN]:${CM_ColourReset} ${ARGV}")
    elseif(MessageType STREQUAL STATUS)
      list(REMOVE_AT ARGV 0)
      message(${MessageType} "${CM_Green}[INFO]:${CM_ColourReset} ${ARGV}")
    else()
      message(${MessageType} "${CM_Green}[INFO]:${CM_ColourReset} ${ARGV}")
    endif()
  endif()
endfunction()
